#set($layout='<#include "../../common/layout.ftl">')
#set($paginateBar='<#include "../../common/paginateBar.ftl" />')
#set($paginate='<#include "../../common/paginate.ftl" />')
#set($search='${search!}')
#set($pageSize='${pageSize!}')
$layout
<@header>
</@header>
<@body>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <small>$!{cfg.moduleName} > $!{table.comment}管理</small>
        </h1>
    </section>
    <!-- Main content -->
<section class="content">
    <!-- Your Page Content Here -->
<div class="row">
<div class="col-xs-12">
    <div class="box">
        <form action="#if(${package.ModuleName})/${package.ModuleName}#end/${table.entityPath}/list/1" method="post"
              class="form-inline">
            <div class="box-header">
                <@shiro.hasPermission name="add${entity}">
                <div class="input-group">
                    <a class="btn btn-primary dialog" href="javascript:;" data-title="创建$!{table.comment}"
                       data-url="#if(${package.ModuleName})/${package.ModuleName}#end/${table.entityPath}/add"
                       data-width="800" data-height="400"><i class="fa fa-plus"></i> 创建$!{table.comment}</a>
                </div>
            </@shiro.hasPermission>
            <div class="input-group">
                <input type="text" name="search" value="$search" class="form-control" placeholder="Search">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
                    <a href="#if(${package.ModuleName})/${package.ModuleName}#end/${table.entityPath}/list/1"
                       class="btn btn-default"><i class="fa fa-refresh"></i></a>
                </div>
            </div>
            <div class="input-group pull-right">
                <button type="button" class="btn btn-primary btn-flat" onclick="exportTo('$!{table.comment}数据');"><i
                        class="fa fa-file-excel-o"></i> 导出
                </button>
            </div>
    </div><!-- /.box-header -->
    </form>
<div class="box-body table-responsive no-padding">
    <table class="table table-hover">
        <tr>
            <th width="100px">
##                <input name="userState" type="checkbox" class="minimal checkbox-toolbar">
                行号</th>
            #foreach($field in ${table.fields})
                #if(!${field.keyFlag})
                    #if("$!field.comment" != "")
                        <th>${field.comment}</th>
                    #else
                        <th>${field.propertyName}</th>
                    #end
                #end
            #end
            <th width="120px">操作</th>
        </tr>
        #set($entitylist='<#list pageData.getRecords() as entity>')
        $entitylist
        <tr>
            <td>
##                <label>
##                    <input type="checkbox" class="minimal checkbox-item">
                    ${((pageData.current-1)*pageData.size +entity_index+1)!}
##                </label>
            </td>
            #foreach($field in ${table.fields})
                #if(!${field.keyFlag})
                    #if(${field.propertyType.equals("Date")})
                        <td>${(entity.${field.propertyName}?string('yyyy-MM-dd'))!'--'}</td>
                    #else
                        <td>${(entity.${field.propertyName})!'--'}</td>
                    #end
                #end
            #end
            <td>
                <@shiro.hasPermission name="edit${entity}">
                <a class="btn btn-primary btn-xs dialog" href="javascript:;" data-url="#if(${package.ModuleName})/${package.ModuleName}#end/${table.entityPath}/edit/${(entity.id)!}"
                   data-title="编辑$!{table.comment}" data-width="850" data-height="550">编辑</a>
            </@shiro.hasPermission>
            <@shiro.hasPermission name="delete${entity}">
            <a class="btn btn-danger btn-xs"
               data-tiggle="ajax"
               data-submit-url="#if(${package.ModuleName})/${package.ModuleName}#end/${table.entityPath}/delete?id=${(entity.id)!}"
               data-confirm="您确定要删除该条记录吗?">删除</a>
        </@shiro.hasPermission>
        </td>
        </tr>
        #set($list='</#list>')
        $list
    </table>
</div><!-- /.box-body -->
    <div class="box-footer row">
        <div class="col-md-6">
            $paginateBar
	  		  <@paginate pageData=pageData actionUrl="#if(${package.ModuleName})/${package.ModuleName}#end/${table.entityPath}/list/" urlParas="?search=$search"  />
        </div>
        <div class="col-md-6 pull-left">
            $paginate
            <@paginate currentPage=pageData.getCurrent() totalPage=pageData.getPages() actionUrl="#if(${package.ModuleName})/${package.ModuleName}#end/${table.entityPath}/list/" urlParas="?search=$search&pageSize=$pageSize"  />
        </div>
    </div>
</div><!-- /.box -->
</div>
</div>
</section><!-- /.content -->
</div><!-- /.content-wrapper -->
</@body>
<@footer>
</@footer>